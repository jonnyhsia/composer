<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Pref">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Pref.Key">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Pref.Value">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textCaption</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:maxEms">6</item>
    </style>

    <style name="CustomSwitch">
        <item name="colorControlActivated">@color/controlTint</item>
    </style>

    <style name="CustomCheckbox" parent="Theme.AppCompat">
        <item name="android:buttonTint">@color/controlTint</item>
    </style>

</resources>