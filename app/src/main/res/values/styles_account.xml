<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AccountLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="innerMarginTop">16dp</item>
        <item name="innerMarginBottom">16dp</item>
        <item name="labelFontFamily">@font/noto_sans_medium</item>
    </style>

    <style name="AccountLabel.Normal">
        <item name="iconEnd">@mipmap/ic_arrow</item>
    </style>

    <style name="AccountLabel.Switch">
        <item name="labelType">_switch</item>
    </style>

    <style name="AccountSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">#F5F5F5</item>
        <item name="sectionType">header</item>
    </style>

</resources>