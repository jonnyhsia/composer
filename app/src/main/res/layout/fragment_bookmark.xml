<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/status_height"
    tools:context=".page.main.bookmark.BookmarkFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:letterSpacing="0.06"
        android:text="我的书签"
        android:textColor="@color/textPrimary"
        android:textSize="32sp"
        android:textStyle="bold" />

    <android.support.design.widget.TabLayout
        android:id="@+id/bookmarkTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="0dp"
        app:tabBackground="@android:color/transparent"
        app:tabMinWidth="0dp"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/TextTabBookmark"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-1dp"
        android:background="@color/divider"
        android:elevation="-1dp" />

    <com.jonnyhsia.uilib.widget.BounceViewPager
        android:id="@+id/pagerBookmark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>