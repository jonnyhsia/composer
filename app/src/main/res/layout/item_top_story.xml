<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <TextView
        style="@style/TextHomeSection.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="头条故事 / TOP" />

    <TextView
        style="@style/TextHomeSection.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="每日热度最高的精选故事合辑" />

    <com.jonnyhsia.uilib.widget.BounceRecyclerView
        android:id="@+id/recyclerTopStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        tools:listitem="@layout/item_big_story" />

</LinearLayout>