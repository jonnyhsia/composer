<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_section"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    tools:context=".page.main.home.multitype.AdvertisementsViewBinder">

    <TextView
        style="@style/TextHomeSection.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="土豆的金主们" />

    <TextView
        style="@style/TextHomeSection.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="看一看瞧一瞧，听金主们把话聊" />

    <com.jonnyhsia.uilib.widget.BounceRecyclerView
        android:id="@+id/recycleAdvertisement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        tools:layout_height="236dp"
        tools:listitem="@layout/item_advertisement" />

</LinearLayout>